{{> layout/header}}

<style>
    /* 목록 페이지 전용 카드 스타일 (재사용) */
    .paper-list-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
        padding: 2.5rem;
        max-width: 1200px; /* 상세 정보 및 탭 포함으로 더 넓은 너비 허용 */
        margin: 0 auto;
    }

    .paper-list-card .list-header {
        background-color: transparent;
        font-size: 1.5rem; /* 이 속성은 주로 제목에 쓰이나, 버튼만 있다면 영향 미미 */
        font-weight: bold; /* 이 속성도 주로 제목에 쓰이나, 버튼만 있다면 영향 미미 */
        border-bottom: 2px solid #eee;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        display: flex;
        justify-content: flex-end; /* 변경: 버튼 그룹을 오른쪽 끝으로 정렬 */
        align-items: center;
    }

    /* 과정 요약 정보 스타일 */
    .course-summary-info {
        margin-top: 1.5rem; /* 버튼 그룹과의 간격 */
        margin-bottom: 1.5rem; /* 탭과의 간격 */
        line-height: 1.8; /* 줄 간격 조정 */
        color: #495057;
    }

    /* 탭 스타일 */
    .nav-tabs {
        margin-bottom: 0; /* 탭 아래 여백 제거 */
        border-bottom: none; /* 부트스트랩 기본 하단 선 제거 */
    }

    .nav-tabs .nav-item .nav-link {
        border-radius: 8px 8px 0 0; /* 탭 상단 모서리 둥글게 */
        margin-right: 5px; /* 탭 간 간격 */
        border: 1px solid #dee2e6;
        border-bottom: none; /* 탭 아래선 제거 */
        color: #495057;
        font-weight: 600;
        background-color: #f8f9fa;
        transition: all 0.2s ease-in-out;
    }

    .nav-tabs .nav-item .nav-link.active {
        background-color: #ffffff;
        color: #007bff; /* 활성 탭 색상 */
        border-color: #dee2e6;
        border-bottom-color: #ffffff; /* 활성 탭 아래선은 배경색과 동일하게 */
    }

    .tab-content {
        border: 1px solid #dee2e6; /* 탭 컨텐츠 전체 테두리 */
        border-top: none; /* 상단 테두리는 탭과 연결되도록 제거 */
        border-radius: 0 0 16px 16px; /* 하단 모서리 둥글게 */
        padding: 1.5rem; /* 탭 컨텐츠 내부 패딩 */
        background-color: #ffffff;
        overflow: hidden; /* 내부 요소가 넘칠 경우 처리 */
    }


    /* 테이블 스타일 (재사용 및 확장) */
    .table {
        margin-bottom: 0; /* table-responsive 내부 테이블은 마진 제거 */
        border-collapse: separate;
        border-spacing: 0;
    }

    .table-responsive {
        border-radius: 10px; /* 컨테이너에 둥근 모서리 적용 */
        overflow-x: auto; /* 가로 스크롤 추가 */
        border: 1px solid #dee2e6; /* 테이블 전체 테두리처럼 보이게 */
        margin-top: 1rem; /* 탭 컨텐츠와의 간격 */
    }

    .table-responsive .table {
        border: none; /* 컨테이너에 테두리가 있으므로 내부 테이블은 테두리 제거 */
    }

    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        color: #495057;
        padding: 1rem 0.75rem;
        white-space: nowrap; /* 헤더 텍스트 줄바꿈 방지 */
    }

    .table tbody tr {
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

    .table tbody tr:hover {
        background-color: #f0f8ff;
    }

    .table tbody td {
        padding: 0.75rem;
        vertical-align: middle;
        border-top: 1px solid #dee2e6;
        white-space: nowrap; /* 기본적으로 줄바꿈 방지 */
    }

    /* 학생 총평 컬럼 (줄바꿈 허용) */
    .comment-cell {
        white-space: normal !important; /* 줄바꿈 허용 */
        word-break: break-all; /* 단어가 길어도 강제 줄바꿈 */
        max-width: 250px; /* 필요한 경우 최대 너비 지정 */
    }

    /* 버튼 스타일 (기존 .btn-primary 스타일과 일치) */
    .btn-primary {
        padding: 0.75rem 1.25rem; /* 버튼 패딩 조정 (100% 너비가 아니므로) */
        font-weight: bold;
        font-size: 1rem;
        border-radius: 12px;
        /* 여기서는 100% 너비가 아니라 옆에 배치되므로 width: auto; 또는 제거 */
        width: auto;
    }

</style>

<input type="hidden" id="courseId" value="{{model.courseId}}">
<input type="hidden" id="tabNum" value="{{tabNum}}">

<div class="container mt-5 mb-5">
    <div class="paper-list-card">
        <div class="list-header">
            <div class="d-flex"><a id="subject-save-form"
                                   href="/api/course-menu/course/{{model.courseId}}/subject/save-form?courseTitle={{model.courseTitle}}
                &courseRound={{model.courseRound}}" class="btn
                btn-primary me-3">교과목등록</a> <a id="student-save-form"
                                               href="/api/course-menu/course/{{model.courseId}}/student/save-form?courseTitle={{model.courseTitle}}
                &courseRound={{model.courseRound}}" class="btn
                btn-primary">학생등록</a>
            </div>
        </div>

        <div class="course-summary-info">
            <p><strong>과정명:</strong> {{model.courseTitle}}</p>
            <p><strong>과정목표:</strong> {{model.coursePurpose}}</p>
            <p><strong>과정회차:</strong> {{model.courseRound}}</p>
            <p><strong>진행여부:</strong> {{model.courseStatus}}</p>
        </div>

        <hr class="mb-4">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="subject-tab" data-bs-toggle="tab" data-bs-target="#subject-tab-pane"
                        type="button" role="tab" aria-controls="subject-tab-pane" aria-selected="true">해당 과정의 교과목들
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="student-tab" data-bs-toggle="tab" data-bs-target="#student-tab-pane"
                        type="button" role="tab" aria-controls="student-tab-pane" aria-selected="false">해당 과정의 학생들
                </button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">

            <div class="tab-pane fade show active" id="subject-tab-pane" role="tabpanel" aria-labelledby="subject-tab"
                 tabindex="0">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>연번</th>
                            <th>교과목ID</th>
                            <th>교과목명</th>
                            <th>NCS</th>
                            <th>훈련수준</th>
                            <th>교과목시간</th>
                            <th>학습방법</th>
                            <th>평가방법</th>
                            <th>시작일</th>
                            <th>종료일</th>
                            <th>평가일</th>
                            <th>재평가일</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#model.subjects}}
                            <tr class="click-tr"
                                onclick="location.href='/api/course-menu/subject/{{subjectId}}/element'">
                                <td>{{no}}</td>
                                <td>{{code}}</td>
                                <td>{{title}}</td>
                                <td>{{ncsType}}</td>
                                <td>{{grade}}</td>
                                <td>{{totalTime}}</td>
                                <td>{{learningWay}}</td>
                                <td>{{evaluationWay}}</td>
                                <td>{{startDate}}</td>
                                <td>{{endDate}}</td>
                                <td>{{evaluationDate}}</td>
                                <td>{{revaluationDate}}</td>
                            </tr>
                        {{/model.subjects}}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="tab-pane fade" id="student-tab-pane" role="tabpanel" aria-labelledby="student-tab" tabindex="0">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th style="width: 10%">이름</th>
                            <th style="width: 7%">생일</th>
                            <th style="width: 7%">상태</th>
                            <th style="width: 10%">중탈날짜</th>
                            <th style="width: 10%">중탈이유</th>
                            <th style="width: 7%">훈련수준</th>
                            <th style="width: 7%">인증</th>
                            <th style="width: 42%">학생총평</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#model.students}}
                            <tr>
                                <td>{{name}}</td>
                                <td>{{birthday}}</td>
                                <td>{{studentStatus}}</td>
                                <td>{{dropOutDate}}</td>
                                <td>{{dropOutReason}}</td>
                                <td>{{grade}}</td>
                                <td>{{authCode}}</td>
                                <td class="comment-cell">{{comment}}</td>
                            </tr>
                        {{/model.students}}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>

</div>

<script>
    // 부트스트랩 탭 활성화 로직
    // 페이지 로드 시 tabNum 값에 따라 탭 활성화
    document.addEventListener('DOMContentLoaded', function () {
        let selectedTabNum = document.getElementById("tabNum").value;
        let myTab = new bootstrap.Tab(document.getElementById(selectedTabNum == 0 ? 'subject-tab' : 'student-tab'));
        myTab.show();
    });
</script>

