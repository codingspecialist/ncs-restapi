{{> layout/header}}

<div class="container p-5">

    <div class="d-flex justify-content-end">
        <a href="/api/student/save-form" class="btn btn-primary">학생등록</a>
    </div>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>이름</th>
            <th>생일</th>
            <th>상태</th>
            <th>중탈날짜</th>
            <th>중탈이유</th>
            <th>총평</th>
            <th>수준</th>
            <th>과정명/회차</th>
        </tr>
        </thead>
        <tbody>
        {{#paging.students}}
            <tr>
                <td>{{name}}</td>
                <td>{{birthday}}</td>
                <td>{{state}}</td>
                <td>{{dropOutDate}}</td>
                <td>{{dropOutReason}}</td>
                <td>{{comment}}</td>
                <td>{{grade}}</td>
                <td>{{courseTitle}} : {{courseRound}}회차</td>
            </tr>
        {{/paging.students}}
        </tbody>
    </table>

    <ul class="pagination d-flex justify-content-center">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>

</div>

{{> layout/footer}}