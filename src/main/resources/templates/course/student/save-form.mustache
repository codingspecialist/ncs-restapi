{{> layout/header}}

<style>
    .subject-form-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
        padding: 2.5rem;
        max-width: 720px;
        margin: 0 auto;
    }

    .subject-form-card .card-header {
        background-color: transparent;
        font-size: 1.5rem;
        font-weight: bold;
        border-bottom: 2px solid #eee;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 0.3rem;
    }

    .form-control {
        border-radius: 10px;
    }

    .btn-primary {
        padding: 0.75rem;
        font-weight: bold;
        font-size: 1rem;
        border-radius: 12px;
    }

    .form-section {
        margin-bottom: 1.4rem;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="subject-form-card">
        <div class="card-header">
            {{courseTitle}} / {{courseRound}}회차 학생 등록
        </div>

        <form id="save-form" action="/api/course-menu/course/{{courseId}}/student/save" method="post">
            <div class="form-section">
                <label class="form-label">학생 이름</label>
                <input type="text" class="form-control" name="name" value="보스" placeholder="학생명">
            </div>

            <div class="form-section">
                <label class="form-label">생년월일 (6자리)</label>
                <input type="text" class="form-control" name="birthday" value="860205" placeholder="예: 860205">
            </div>

            <button type="submit" class="btn btn-primary mt-3 form-control">학생 등록</button>
        </form>
    </div>
</div>

{{> layout/footer}}
