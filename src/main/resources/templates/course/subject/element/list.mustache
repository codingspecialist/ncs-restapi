{{> layout/header}}

<style>
    /* 목록 페이지 전용 카드 스타일 (재사용) */
    .paper-list-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
        padding: 2.5rem;
        max-width: 900px; /* 이 페이지에 적합한 max-width 조정 */
        margin: 0 auto;
    }

    .paper-list-card .list-header {
        background-color: transparent;
        font-size: 1.5rem;
        font-weight: bold;
        border-bottom: 2px solid #eee;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        display: flex;
        justify-content: flex-end; /* 버튼만 있으므로 오른쪽 정렬 */
        align-items: center;
    }

    /* 과정 요약 정보 스타일 (교과목 요약에 재사용) */
    .course-summary-info {
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
        line-height: 1.8;
        color: #495057;
    }

    /* 테이블 스타일 (재사용) */
    .table {
        margin-bottom: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table-responsive {
        border-radius: 10px;
        overflow-x: auto;
        border: 1px solid #dee2e6;
        margin-top: 1rem;
    }

    .table-responsive .table {
        border: none;
    }

    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        color: #495057;
        padding: 1rem 0.75rem;
        white-space: nowrap; /* 헤더 텍스트 줄바꿈 방지 */
    }

    .table tbody tr {
        cursor: pointer; /* 클릭 가능한 테이블 행은 커서 변경 */
        transition: background-color 0.2s ease-in-out;
    }

    .table tbody tr:hover {
        background-color: #f0f8ff;
    }

    .table tbody td {
        padding: 0.75rem;
        vertical-align: middle;
        border-top: 1px solid #dee2e6;
        white-space: nowrap; /* 기본적으로 줄바꿈 방지 */
    }

    /* 버튼 스타일 (재사용) */
    .btn-primary {
        padding: 0.75rem 1.25rem;
        font-weight: bold;
        font-size: 1rem;
        border-radius: 12px;
        width: auto; /* 버튼 옆에 다른 요소가 없으므로 100%는 아님 */
    }
</style>

<div class="container mt-5 mb-5">
    <div class="paper-list-card">
        <div class="list-header">
            <a href="/api/course-menu/subject/{{model.subjectId}}/element/save-form" class="btn btn-primary">교과목 요소
                등록</a>
        </div>

        <div class="course-summary-info">
            <h3 class="mb-3">교과목 상세 정보</h3>
            <p><strong>교과목명:</strong> {{model.title}}</p>
            <p><strong>교과목목표:</strong> {{model.purpose}}</p>
        </div>

        <hr class="mb-4">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>순번</th>
                    <th>교과목 요소</th>
                    <th>평가기준</th>
                </tr>
                </thead>
                <tbody>
                {{#model.subjectElements}}
                    <tr>
                        <td>{{no}}</td>
                        <td>{{subtitle}}</td>
                        <td>{{subjectElementPurpose}}</td>
                    </tr>
                {{/model.subjectElements}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{> layout/footer}}