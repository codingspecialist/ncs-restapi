{{> layout/header}}

<div class="container p-5">

    <div class="d-flex justify-content-end">
        <a href="/api/teacher/subject/save-form" class="btn btn-primary">교과목등록</a>
    </div>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>연번</th>
            <th>교과목ID</th>
            <th>교과목명</th>
            <th>NCS</th>
            <th>훈련수준</th>
            <th>교과목시간</th>
            <th>학습방법</th>
            <th>평가방법</th>
            <th>시작일</th>
            <th>종료일</th>
            <th>평가일</th>
            <th>재평가일</th>
            <th>과정명/회차</th>
        </tr>
        </thead>
        <tbody>
        {{#paging.subjects}}
            <tr>
                <td>{{no}}</td>
                <td>{{code}}</td>
                <td><a href="/api/teacher/subject/{{subjectId}}/element">{{title}}</a></td>
                <td>{{gubun}}</td>
                <td>{{grade}}</td>
                <td>{{totalTime}}</td>
                <td>{{learningWay}}</td>
                <td>{{evaluationWay}}</td>
                <td>{{startDate}}</td>
                <td>{{endDate}}</td>
                <td>{{evaluationDate}}</td>
                <td>{{revaluationDate}}</td>
                <td>{{courseTitle}} : {{courseRound}}회차</td>
            </tr>
        {{/paging.subjects}}
        </tbody>
    </table>

    <ul class="pagination d-flex justify-content-center">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>

</div>

{{> layout/footer}}