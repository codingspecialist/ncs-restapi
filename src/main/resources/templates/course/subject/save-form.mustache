{{> layout/header}}

<div class="container p-5">

    <div class="card">
        <div class="card-header"><b>과정을 해주세요</b></div>
        <div class="card-body">
            <form action="/api/course/save" method="post" enctype="application/x-www-form-urlencoded">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter title" name="title" value="자바 크로스 플랫폼 양성과정">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter code" name="code" value="1001">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter totalTime" name="totalTime" value="900">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter totalDay" name="totalDay" value="113">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter round" name="round" value="1">
                </div>
                <div class="mb-3">
                    <input type="date" class="form-control" placeholder="Enter startDate" name="startDate" value="2024-05-01">
                </div>
                <div class="mb-3">
                    <input type="date" class="form-control" placeholder="Enter endDate" name="endDate" value="2024-11-14">
                </div>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter teacherName" name="teacherName" value="홍길동">
                </div>
                <button type="submit" class="btn btn-primary form-control">과정등록</button>
            </form>
        </div>
    </div>
</div>

{{> layout/footer}}