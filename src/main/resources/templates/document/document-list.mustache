{{> layout/header}}

<style>
    /* ------------------------------------------------------------------------- */
    /* 공통 디자인 시스템 CSS                                                  */
    /* ------------------------------------------------------------------------- */

    /* 공통 카드 기본 스타일 (목록, 상세, 폼 화면 모두 재사용) */
    .paper-list-card,
    .paper-form-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
        padding: 2.5rem;
        margin: 0 auto;
    }

    /* 카드별 최대 너비 */
    .paper-list-card {
        max-width: 1200px; /* 목록 및 상세 화면 카드 너비 */
    }

    .paper-form-card {
        max-width: 840px; /* 폼 화면 카드 너비 */
    }

    /* 목록/상세 화면 공통 헤더 스타일 (제목과 선택적 버튼을 위한 flexbox) */
    .list-header {
        background-color: transparent;
        border-bottom: 2px solid #eee;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        display: flex;
        justify-content: space-between; /* 제목과 버튼을 양 끝으로 정렬 */
        align-items: center;
    }

    /* list-header 내 제목 스타일 */
    .list-header h2 {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 0; /* h2 기본 마진 제거 */
        color: #343a40;
    }

    /* 버튼 스타일 */
    .btn-primary {
        padding: 0.75rem 1.25rem;
        font-weight: bold;
        font-size: 1rem;
        border-radius: 12px;
        width: auto;
    }

    /* 폼 내 제출 버튼 (100% 너비) */
    .paper-form-card .btn-primary {
        width: 100%;
        padding: 0.75rem;
    }

    /* 테이블 스타일 */
    .table {
        margin-bottom: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table-responsive {
        border-radius: 10px;
        overflow-x: auto;
        border: 1px solid #dee2e6;
    }

    .table-responsive .table { /* Ensures inner table has no extra border */
        border: none;
        margin-bottom: 0;
    }

    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        color: #495057;
        padding: 1rem 0.75rem;
        white-space: nowrap;
    }

    .table tbody tr {
        transition: background-color 0.2s ease-in-out;
    }

    .table tbody tr.click-tr { /* 클릭 가능한 행 스타일 */
        cursor: pointer;
    }

    .table tbody tr:hover {
        background-color: #f0f8ff;
    }

    .table tbody td {
        padding: 0.75rem;
        vertical-align: middle;
        border-top: 1px solid #dee2e6;
        white-space: nowrap;
    }

    /* 페이징 스타일 (이 페이지에는 없지만 공통 CSS에 포함) */
    .pagination {
        margin-top: 1.5rem;
    }

    .pagination .page-item .page-link {
        border-radius: 8px;
        margin: 0 4px;
        min-width: 40px;
        text-align: center;
    }

    .pagination .page-item:first-child .page-link,
    .pagination .page-item:last-child .page-link {
        border-radius: 8px;
    }

    /* 브레드크럼 스타일 (현재 이 페이지에는 없지만 공통 CSS에 포함) */
    .breadcrumb {
        background-color: transparent;
        padding: 0;
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: ">" !important;
        padding-right: 0.5rem;
        padding-left: 0.5rem;
        color: #6c757d;
    }

    .breadcrumb-item a {
        color: #007bff;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #6c757d;
        font-weight: 600;
    }

    /* 상세 정보 섹션 스타일 (현재 이 페이지에는 없지만 공통 CSS에 포함) */
    .detail-info-section {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        line-height: 1.8;
        border: 1px solid #e9ecef;
    }

    .detail-info-section strong {
        color: #343a40;
        min-width: 90px;
        display: inline-block;
    }

    .detail-info-section p {
        margin-bottom: 0.5rem;
    }

    .detail-info-section a {
        color: #0d6efd;
        text-decoration: underline;
    }

    .detail-info-section div.fw-bold {
        margin-bottom: 0.75rem;
    }

    .detail-info-section ul {
        padding-left: 20px;
        line-height: 1.6;
        color: #495057;
        margin: 0;
    }

    /* 개별 문제 카드 스타일 (현재 이 페이지에는 없지만 공통 CSS에 포함) */
    .question-card {
        border: 1px solid #dee2e6;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.04);
    }

    .question-card .card-header {
        background-color: #f8f9fa;
        font-weight: bold;
        border-bottom: 1px solid #dee2e6;
        padding: 1rem 1.25rem;
    }

    .question-card .card-title {
        color: #212529;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .question-card .badge {
        font-size: 0.85em;
        padding: 0.5em 0.8em;
        border-radius: 0.35rem;
    }

    .question-card .img-fluid {
        border-radius: 8px;
        border: 1px solid #f0f0f0;
        padding: 5px;
        background-color: #fff;
    }

    .question-card .form-check {
        font-size: 0.95rem;
    }

    .question-card .form-check-input {
        margin-top: 0.3em;
    }

    /* 시나리오/문제 설명 블록 스타일 (현재 이 페이지에는 없지만 공통 CSS에 포함) */
    .scenario-description-block {
        border: 1px solid #dee2e6;
        border-radius: 6px;
        padding: 12px;
        background-color: #fefefe;
        margin-bottom: 1rem;
    }

    .scenario-description-block p {
        margin-bottom: 0.5rem;
    }

    .scenario-description-block a {
        color: #0d6efd;
        text-decoration: underline;
    }

    .scenario-description-block div {
        color: #343a40;
    }

    /* 폼 관련 스타일 (현재 이 페이지에는 없지만 공통 CSS에 포함) */
    .form-label {
        font-weight: 600;
        margin-bottom: 0.3rem;
    }

    .form-control,
    .form-select {
        border-radius: 10px;
    }

    .form-section {
        margin-bottom: 1.4rem;
    }

    /* 문제 등록 페이지의 옵션 아이템 스타일 (현재 이 페이지에는 없지만 공통 CSS에 포함) */
    .questionItem {
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 1rem;
        background-color: #f9f9f9;
        margin-top: 1rem;
    }

    .questionItem:first-child {
        margin-top: 0;
    }

    .rubric-box {
        margin-top: 0.75rem;
        display: none; /* 루브릭 박스 기본 숨김 */
    }

</style>

