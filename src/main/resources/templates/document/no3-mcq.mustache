{{> layout/header}}

<style>
    .page-title {
        text-align: center;
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 2rem;
    }
</style>

<div class="container p-5">

    <div class="page-title">
        <h1>평가지</h1>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            <div>
                시험일 : {{model.evaluationDate}} <br>
                시험장소 : {{model.loc}} <br>
                교과목 : {{model.subjectTitle}} <br>
                훈련교사 : {{model.teacherName}} <br>
                문항수 : {{model.questionCount}} <br>
            </div>
        </div>
        <div class="card-body">
            <div>
                {{#model.subjectElements}}
                    <div><i>{{.}}</i></div>
                {{/model.subjectElements}}
            </div>
        </div>
    </div>

    {{#model.questions}}
        <div class="card mb-4 p-3">
            <div class="card-body">
                <!-- 문제 제목 -->
                <h5 class="card-title">{{no}}. {{title}}</h5>
                <div class="badge bg-secondary my-2">배점: {{totalPoint}}점</div>

                <!-- 지문 이미지 -->
                {{#stimulusImg}}
                    <div>
                        <img src="{{stimulusImg}}" alt="지문 이미지" class="img-fluid mb-3" style="max-height: 200px;">
                    </div>
                {{/stimulusImg}}

                <!-- 객관식 옵션 -->
                <div>
                    {{#options}}
                        <div class="form-check mb-1 d-flex align-items-center">
                            <input class="form-check-input me-2" type="radio" name="answer-{{questionId}}"
                                   {{#isRight}}checked{{/isRight}} disabled>
                            <label>
                                {{no}}. {{content}}
                            </label>
                        </div>
                    {{/options}}
                </div>
            </div>
        </div>
    {{/model.questions}}
</div>

{{> layout/footer}}