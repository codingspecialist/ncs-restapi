{{> layout/header}}

<div class="container mt-5 mb-5">
    <div class="paper-list-card">
        <div class="page-title"><h1>평가지</h1></div>

        <!-- 시험 정보 -->
        <div class="detail-info-section">
            <strong>시험일:</strong> {{model.evaluationDate}}<br>
            <strong>시험장소:</strong> {{model.evaluationRoom}}<br>
            <strong>시험장비:</strong> {{model.evaluationDevice}}<br>
            <strong>교과목:</strong> {{model.subjectTitle}}<br>
            <strong>훈련교사:</strong> {{model.teacherName}}<br>
            <strong>문항수:</strong> {{model.questionCount}}<br>
        </div>

        <!-- 과제 정보 -->
        <div class="detail-info-section">
            <div class="section-title">과제 정보</div>

            <div class="mb-3">
                <div class="fw-bold text-secondary mb-1">📌 주제</div>
                <div class="ps-1">{{model.pblTitle}}</div>
            </div>

            <div class="mb-3">
                <div class="fw-bold text-secondary mb-1">📖 시나리오 및 상세 가이드</div>
                <div class="ps-1 mb-2">{{model.pblScenario}}</div>
                {{#model.pblScenarioGuideLink}}
                    <a href="{{model.pblScenarioGuideLink}}" target="_blank" class="btn btn-sm btn-outline-secondary">
                        시나리오 상세 가이드 열기
                    </a>
                {{/model.pblScenarioGuideLink}}
            </div>

            <div class="mb-3">
                <div class="fw-bold text-secondary mb-1">💡 도전 과제</div>
                <ul class="ps-4 mb-1">
                    {{#model.pblChallenges}}
                        <li>{{.}}</li>{{/model.pblChallenges}}
                </ul>
            </div>

            <div class="mb-3">
                <div class="fw-bold text-secondary mb-1">📤 제출 항목</div>
                <ul class="ps-4 mb-1">
                    {{#model.pblSubmitFormats}}
                        <li>{{.}}</li>{{/model.pblSubmitFormats}}
                </ul>
            </div>

            {{#model.pblSubmitTemplateLink}}
                <div class="mb-3">
                    <div class="fw-bold text-secondary mb-1">📎 프로젝트 제출 템플릿</div>
                    <a href="{{model.pblSubmitTemplateLink}}" target="_blank" class="btn btn-sm btn-outline-secondary">
                        제출 템플릿 열기
                    </a>
                </div>
            {{/model.pblSubmitTemplateLink}}
        </div>

        <!-- 문제 목록 -->
        {{#model.questions}}
            <div class="question-card">
                <div class="card-title">{{no}}. {{title}}</div>

                <!-- 시나리오 -->
                <div class="scenario-description-block">
                    {{#scenarios}}
                        {{.}}<br>
                    {{/scenarios}}
                </div>

                <!-- 루브릭 표 -->
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                        <tr>
                            <th style="width: 80px;" class="text-center">점수</th>
                            <th>평가기준 (루브릭 설명)</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#options}}
                            <tr>
                                <td class="text-center fw-bold">{{point}}점</td>
                                <td>{{rubricItem}}</td>
                            </tr>
                        {{/options}}
                        </tbody>
                    </table>
                </div>
            </div>
        {{/model.questions}}
    </div>
</div>

{{> layout/footer}}
