{{> layout/header}}

<style>
    .page-title {
        text-align: center;
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 2rem;
    }

    input[type="radio"]:checked {
        accent-color: #007bff; /* 부트스트랩 primary 색상 */
    }
</style>

<div class="container p-5">
    <ul class="pagination d-flex justify-content-end">
        {{#model.prevIndex}}
            <li class="page-item"><a class="page-link"
                                     href="/api/document-menu/subject/{{model.subjectId}}/no4?currentIndex={{model.prevIndex}}
                ">이전학생</a>
            </li>
        {{/model.prevIndex}}

        {{#model.nextIndex}}
            <li class="page-item"><a class="page-link"
                                     href="/api/document-menu/subject/{{model.subjectId}}/no4?currentIndex={{model.nextIndex}}
                ">다음학생</a>
            </li>
        {{/model.nextIndex}}
    </ul>

    <div class="page-title">
        <h1>개인별평가표</h1>
    </div>

    <div class="card mb-3">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <div>
                    시험일 : {{model.evaluationDate}} <br>
                    평가장소 : {{model.evaluationRoom}} <br>
                    평가장비 : {{model.evaluationDevice}} <br>
                    교과목 : {{model.subjectTitle}} <br>
                    훈련교사 : {{model.teacherName}} <br>
                    훈련생 : {{model.studentName}} <br>
                    문항수 : {{model.questionCount}} <br>
                    총점 : {{model.score}} <br>
                    수준 : {{model.grade}} <br>
                    통과여부 : {{model.examPassState}} <br>
                    평가유형 : {{model.examState}} <br>
                </div>
                <div>
                    <div class="d-flex justify-content-end mb-3">연번 : {{model.no}}</div>
                    <div class="d-flex">
                        <table class="sign-table">
                            <tr>
                                <td class="sign-header">훈련교사</td>
                                <td class="sign-header">훈련생</td>
                            </tr>
                            <tr>
                                <td class="sign-box">
                                    <img class="sign-fit" src="{{model.teacherSign}}">
                                </td>
                                <td class="sign-box">
                                    {{#model.isStudentSign}}
                                        <img class="sign-fit" src="{{model.studentSign}}">
                                    {{/model.isStudentSign}}
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div>
                {{#model.subjectElements}}
                    <div><i>{{.}}</i></div>
                {{/model.subjectElements}}
            </div>
        </div>
    </div>

    {{#model.answers}}
        <div class="card mb-4 p-3 position-relative exam-body">
            <input type="hidden" class="answerId" value="{{answerId}}">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <!-- 문제 제목 -->
                    <h5 class="card-title">{{no}}. {{title}}</h5>

                    <!-- 정답 및 채점 점수 -->
                    <div class="text-end">
                        <small class="text-muted">정답: {{answerNumber}}번</small><br>
                        <small class="text-muted">점수: {{studentPoint}}점</small>
                    </div>
                </div>

                <div class="badge bg-secondary my-2">배점: {{totalPoint}}점</div>

                <!-- 객관식 옵션 -->
                <div>
                    {{#options}}
                        <div class="form-check mb-1 d-flex align-items-center">
                            <input class="form-check-input me-2 optionNo" type="radio"
                                   name="question-{{questionId}}"
                                   value="{{no}}"
                                   {{#isSelect}}checked{{/isSelect}}>
                            <label>{{no}}. {{content}}</label>
                        </div>
                    {{/options}}
                </div>
            </div>
        </div>
    {{/model.answers}}


    <div class="card">
        <div class="card-header">총평</div>
        <div class="card-body">
            <textarea id="teacherComment" class="form-control bg-light" readonly>{{model.teacherComment}}</textarea>
        </div>
    </div>

</div>


{{> layout/footer}}