{{> layout/header}}

<style>
    /* 공통 카드 스타일 */
    .paper-list-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
        padding: 2.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .detail-info-section {
        background-color: #f8f9fa;
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        line-height: 1.8;
        border: 1px solid #e9ecef;
        font-size: 1rem;
    }


    .text-end {
        font-size: 0.85rem;
        line-height: 1.2;
        color: #6c757d;
    }

    .card .card-title {
        font-size: 1.15rem;
        font-weight: bold;
        color: #212529;
        margin-bottom: 1rem;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.5em 0.8em;
        border-radius: 0.35rem;
    }

    .form-check {
        font-size: 0.95rem;
    }

    .form-check-input {
        margin-top: 0.3em;
    }

    .form-check label {
        margin-bottom: 0;
    }

    .img-fluid {
        border-radius: 8px;
        border: 1px solid #f0f0f0;
        padding: 5px;
        background-color: #fff;
        max-height: 200px;
    }

    .exam-body {
        border: 1px solid #dee2e6;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.04);
    }

    .card-header {
        background-color: #f8f9fa;
        font-weight: bold;
        border-bottom: 1px solid #dee2e6;
    }

    .card-footer {
        background-color: #f8f9fa;
        border-top: 1px solid #dee2e6;
    }

    .sign-table {
        border-collapse: collapse;
    }

    .sign-header {
        font-weight: 600;
        font-size: 0.9rem;
        padding: 0.5rem;
        text-align: center;
        background-color: #f1f3f5;
    }

    .sign-box {
        width: 100px;
        height: 60px;
        text-align: center;
        border: 1px solid #ced4da;
    }

    .sign-fit {
        width: auto;
        height: 100%;
        object-fit: contain;
    }

    .pagination .page-link {
        border-radius: 8px;
        margin: 0 4px;
        min-width: 40px;
        text-align: center;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="paper-list-card">

        <ul class="pagination d-flex justify-content-end">
            {{#model.prevIndex}}
                <li class="page-item"><a class="page-link"
                                         href="/api/document-menu/subject/{{model.subjectId}}/no4?currentIndex={{model.prevIndex}}
                    ">이전학생</a>
                </li>
            {{/model.prevIndex}}

            {{#model.nextIndex}}
                <li class="page-item"><a class="page-link"
                                         href="/api/document-menu/subject/{{model.subjectId}}/no4?currentIndex={{model.nextIndex}}
                    ">다음학생</a>
                </li>
            {{/model.nextIndex}}
        </ul>

        <div class="d-flex justify-content-between detail-info-section">
            <div>
                <strong>시험일</strong> : {{model.evaluationDate}} <br>
                <strong>평가장소</strong> : {{model.evaluationRoom}} <br>
                <strong>평가장비</strong> : {{model.evaluationDevice}} <br>
                <strong>교과목</strong> : {{model.subjectTitle}} <br>
                <strong>훈련교사</strong> : {{model.teacherName}} <br>
                <strong>훈련생</strong> : {{model.studentName}} <br>
                <strong>문항수</strong> : {{model.questionCount}} <br>
                <strong>만점기준</strong> : {{model.manjumScore}} <br>
                <strong>총점</strong> : {{model.score}} / <strong>백분율</strong> : {{model.finalScore}}<br>
                <strong>수준</strong> : {{model.grade}} <br>
                <strong>통과여부</strong> : {{model.examPassState}} <br>
                <strong>평가유형</strong> : {{model.examState}} <br>
            </div>
            <div>
                <div class="text-end mb-3">연번 : {{model.studentNo}}</div>
                <div class="d-flex">
                    <table class="sign-table">
                        <tr>
                            <td class="sign-header">훈련교사</td>
                            <td class="sign-header">훈련생</td>
                        </tr>
                        <tr>
                            <td class="sign-box">
                                <img class="sign-fit" src="{{model.teacherSign}}">
                            </td>
                            <td class="sign-box">
                                {{#model.studentSign}}
                                    <img class="sign-fit" src="{{model.studentSign}}">
                                {{/model.studentSign}}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>


         <div class="card mb-4 border border-secondary-subtle shadow-sm">
            <div class="card-header bg-light text-dark fw-bold">
                📎 학생 제출 자료
            </div>
            <div class="card-body">
                {{#model.submitLink}}
                             <a href="{{submitLink}}" target="_blank"
                                       class="text-decoration-underline text-primary">
                                        {{submitLink}}
                                    </a>  
                {{/model.submitLink}}
                {{^model.submitLink}}
                    <div class="text-muted">제출된 자료가 없습니다.</div>
                {{/model.submitLink}}
            </div>
        </div>


        {{#model.answers}}
            <div class="card mb-1 question-card exam-body">
                <input type="hidden" class="answerId" value="{{answerId}}">
                <div class="card-header">
                    {{no}}. {{title}} </div>

                <div class="card-body p-3">
                    <div class="scenario-description-block mb-4">
                        <div class="text-dark">
                            {{#scenarios}}
                                {{.}}<br>
                            {{/scenarios}}
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                            <tr>
                                <th style="width: 80px;" class="text-center">점수</th>
                                <th>평가기준 (루브릭 설명)</th>
                                <th>채점</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#options}}
                                <tr>
                                    <td class="text-center fw-bold align-middle">
                                        {{point}}점
                                    </td>
                                    <td>{{rubricItem}}</td>
                                    <td><input class="form-check-input me-2 optionNo" type="radio"
                                               name="question-{{questionId}}"
                                               value="{{no}}"
                                               {{#isSelect}}checked{{/isSelect}}></td>
                                </tr>
                            {{/options}}
                            </tbody>
                        </table>

                        {{#codeReviewPRLink}}
                            <div class="mt-3 mb-3 p-3 border rounded bg-white border-primary-subtle shadow-sm">
                                <div class="fw-semibold text-dark mb-2">
                                    📌 코드리뷰 링크
                                </div>
                                <div>
                                    <a href="{{codeReviewPRLink}}" target="_blank"
                                       class="text-decoration-underline text-primary">
                                        {{codeReviewPRLink}}
                                    </a>
                                </div>
                            </div>
                        {{/codeReviewPRLink}}


                    </div>
                </div>
            </div>
        {{/model.answers}}

        <div class="card">
            <div class="card-header">총평</div>
            <div class="card-body">
                <textarea id="teacherComment" class="form-control" rows="5">{{model.teacherComment}}</textarea>
            </div>
            <div class="card-footer d-flex justify-content-end">
                <button type="button" class="btn btn-primary" onclick="sendAnswer({{model.examId}})">총평저장</button>
            </div>
        </div>

    </div>
</div>

{{> layout/footer}}