{{> layout/header}}

<div class="container mt-5 mb-5">
    <div class="paper-list-card">
        <div class="list-header">
            <h2>과정 목록</h2>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>과정ID</th>
                    <th>과정명</th>
                    <th>회차</th>
                    <th>훈련시간</th>
                    <th>훈련일수</th>
                    <th>개강일</th>
                    <th>수료일</th>
                    <th>훈련교사</th>
                    <th>진행상태</th>
                </tr>
                </thead>
                <tbody>
                {{#model.courses}}
                    <tr class="click-tr" onclick="location.href='/api/exam-menu/course/{{id}}/subject'">
                        <td>{{code}}</td>
                        <td>{{title}}</td>
                        <td>{{round}}</td>
                        <td>{{totalTime}}</td>
                        <td>{{totalDay}}</td>
                        <td>{{startDate}}</td>
                        <td>{{endDate}}</td>
                        <td>{{teacherName}}</td>
                        <td>{{courseStatus}}</td>
                    </tr>
                {{/model.courses}}
                </tbody>
            </table>
        </div>

        <ul class="pagination d-flex justify-content-center">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </div>
</div>

{{> layout/footer}}
