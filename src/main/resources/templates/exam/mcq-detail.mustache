{{> layout/header}}

<div class="container mt-5 mb-5">
    <div class="paper-list-card">

        {{#model.originExamId}}
            <div class="d-flex justify-content-end mb-3">
                <a class="btn btn-outline-danger fw-bold px-4 py-2 rounded-pill"
                   href="/api/exam-menu/exam/{{model.originExamId}}/notpass">
                    ⏪ 본평가 결과보기
                </a>
            </div>
            <hr>
        {{/model.originExamId}}

        <ul class="pagination d-flex justify-content-end">
            {{#model.prevExamId}}
                <li class="page-item"><a class="page-link" href="/api/exam-menu/exam/{{model.prevExamId}}">이전학생</a></li>
            {{/model.prevExamId}}
            {{#model.nextExamId}}
                <li class="page-item"><a class="page-link" href="/api/exam-menu/exam/{{model.nextExamId}}">다음학생</a></li>
                <input type="hidden" value="{{model.nextExamId}}" id="nextExamId">
            {{/model.nextExamId}}
        </ul>


        <div class="d-flex justify-content-between detail-info-section">
            <div>
                <strong>시험일</strong> : {{model.evaluationDate}} <br>
                <strong>평가장소</strong> : {{model.evaluationRoom}} <br>
                <strong>평가장비</strong> : {{model.evaluationDevice}} <br>
                <strong>교과목</strong> : {{model.subjectTitle}} <br>
                <strong>훈련교사</strong> : {{model.teacherName}} <br>
                <strong>훈련생</strong> : {{model.studentName}} <br>
                <strong>문항수</strong> : {{model.questionCount}} <br>
                <strong>만점기준</strong> : {{model.manjumScore}} <br>
                <strong>총점</strong> : {{model.score}} / <strong>백분율</strong> : {{model.finalScore}}<br>
                <strong>수준</strong> : {{model.grade}} <br>
                <strong>통과여부</strong> : {{model.examPassState}} <br>
                <strong>평가유형</strong> : {{model.examState}} <br>
            </div>
            <div>
                <div class="text-end mb-3">연번 : {{model.studentNo}}</div>
                <div class="d-flex">
                    <table class="sign-table">
                        <tr>
                            <td class="sign-header">훈련교사</td>
                            <td class="sign-header">훈련생</td>
                        </tr>
                        <tr>
                            <td class="sign-box">
                                <img class="sign-fit" src="{{model.teacherSign}}">
                            </td>
                            <td class="sign-box">
                                {{#model.studentSign}}
                                    <img class="sign-fit" src="{{model.studentSign}}">
                                {{/model.studentSign}}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

        </div>



        {{#model.answers}}
            <div class="card mb-4 p-3 position-relative exam-body">
                <input type="hidden" class="answerId" value="{{answerId}}">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">{{no}}. {{title}}</h5>
                        <div class="text-end">
                            <small class="text-muted">정답: {{answerNumber}}번</small><br>
                            <small class="text-muted">점수: {{studentPoint}}점</small>
                        </div>
                    </div>

                    <div class="badge bg-secondary my-2">배점: {{totalPoint}}점</div>

                    {{#stimulusImg}}
                        <div>
                            <img src="{{stimulusImg}}" alt="지문 이미지" class="img-fluid mb-3">
                        </div>
                    {{/stimulusImg}}

                    <div>
                        {{#options}}
                            <div class="form-check mb-1 d-flex align-items-center">
                                <input class="form-check-input me-2 optionNo" type="radio"
                                       name="question-{{questionId}}"
                                       value="{{no}}"
                                       {{#isSelect}}checked{{/isSelect}}>
                                <label>{{no}}. {{content}}</label>
                            </div>
                        {{/options}}
                    </div>
                </div>
            </div>
        {{/model.answers}}

        <div class="card">
            <div class="card-header">총평</div>
            <div class="card-body">
                <textarea id="teacherComment" class="form-control">{{model.teacherComment}}</textarea>
            </div>
            <div class="card-footer d-flex justify-content-end">
                <button type="button" class="btn btn-primary" onclick="sendAnswer({{model.examId}})">총평저장</button>
            </div>
        </div>

    </div>
</div>

<script>
    function sendAnswer(examId) {
        let nextExamId = $("#nextExamId").val();

        let requestBody = {
            teacherComment: $("#teacherComment").val(),
            answers: []
        };

        $(".exam-body").each(function () {
            const answerId = $(this).find(".answerId").val();
            const selectedOptionNo = $(this).find(".optionNo:checked").val();
            if (!selectedOptionNo) return;
            requestBody.answers.push({
                answerId: Number(answerId),
                selectedOptionNo: Number(selectedOptionNo)
            });
        });

        $.ajax({
            url: `/api/exam-menu/exam/${examId}`,
            type: "put",
            data: JSON.stringify(requestBody),
            contentType: "application/json; charset=utf-8"
        }).done((res) => {
            if (nextExamId) {
                alert("총평 저장 완료");
                location.reload();
            } else {
                alert("총평 저장 완료 - 마지막페이지입니다");
                location.reload();
            }
        }).fail((res) => {
            alert(res.responseJSON?.msg || "저장 중 오류가 발생했습니다.");
        });
    }
</script>

{{> layout/footer}}
