{{> layout/header}}

<style>
    /* 목록 페이지 전용 카드 스타일 (재사용) */
    .paper-list-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
        padding: 2.5rem; /* 기존 폼 카드와 유사한 패딩 */
        max-width: 1200px; /* 목록이 더 넓을 수 있으므로 max-width를 넓게 설정 */
        margin: 0 auto;
    }

    /* 테이블 스타일 (재사용 및 확장) */
    .table {
        margin-bottom: 0; /* table-responsive 내부 테이블은 마진 제거 */
        border-collapse: separate;
        border-spacing: 0;
    }

    .table-responsive {
        border-radius: 10px; /* 컨테이너에 둥근 모서리 적용 */
        overflow-x: auto; /* 가로 스크롤 추가 */
        border: 1px solid #dee2e6; /* 테이블 전체 테두리처럼 보이게 */
        /* margin-top은 현재 html에 상단에 아무것도 없으므로 제거 */
    }

    .table-responsive .table {
        border: none; /* 컨테이너에 테두리가 있으므로 내부 테이블은 테두리 제거 */
    }

    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        color: #495057;
        padding: 1rem 0.75rem;
        white-space: nowrap; /* 헤더 텍스트 줄바꿈 방지 */
    }

    .table tbody tr {
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;
    }

    .table tbody tr:hover {
        background-color: #f0f8ff;
    }

    .table tbody td {
        padding: 0.75rem;
        vertical-align: middle;
        border-top: 1px solid #dee2e6;
        white-space: nowrap; /* 기본적으로 줄바꿈 방지 */
    }

    /* 페이징 스타일 (부트스트랩 기본 스타일 유지) */
    .pagination {
        margin-top: 1.5rem; /* 페이징 상단 간격 */
    }

    .pagination .page-item .page-link {
        border-radius: 8px;
        margin: 0 4px;
        min-width: 40px;
        text-align: center;
    }

    .pagination .page-item:first-child .page-link,
    .pagination .page-item:last-child .page-link {
        border-radius: 8px;
    }

    /* 제목 헤더 스타일 */
    .list-header {
        background-color: transparent;
        border-bottom: 2px solid #eee;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .list-header h2 {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 0;
        color: #343a40;
    }
    
</style>

<div class="container mt-5 mb-5">
    <div class="paper-list-card">

        <div class="list-header">
            <h2>과정 목록</h2>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>과정ID</th>
                    <th>과정명</th>
                    <th>회차</th>
                    <th>훈련시간</th>
                    <th>훈련일수</th>
                    <th>개강일</th>
                    <th>수료일</th>
                    <th>훈련교사</th>
                    <th>진행상태</th>
                </tr>
                </thead>
                <tbody>
                {{#model.courses}}
                    <tr class="click-tr" onclick="location.href='/api/paper-menu/course/{{id}}/subject'">
                        <td>{{code}}</td>
                        <td>{{title}}</td>
                        <td>{{round}}</td>
                        <td>{{totalTime}}</td>
                        <td>{{totalDay}}</td>
                        <td>{{startDate}}</td>
                        <td>{{endDate}}</td>
                        <td>{{teacherName}}</td>
                        <td>{{courseStatus}}</td>
                    </tr>
                {{/model.courses}}
                </tbody>
            </table>
        </div>
        <ul class="pagination d-flex justify-content-center">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>

    </div>
</div>

{{> layout/footer}}