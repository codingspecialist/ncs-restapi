{{> layout/header}}

<style>
    /* 기존 스타일 유지 + 아래 새로 추가 */
    .element-info-box {
        background-color: #f1f3f5;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 1.25rem;
        margin-bottom: 2rem;
    }

    .element-info-box h6 {
        font-weight: bold;
        color: #343a40;
        margin-bottom: 1rem;
    }

    .element-info-box ul {
        padding-left: 1.2rem;
        margin-bottom: 0;
    }

    .element-info-box li {
        line-height: 1.7;
        color: #495057;
        margin-bottom: 0.3rem;
    }

    .paper-list-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
        padding: 2.5rem;
        margin: 0 auto;
        max-width: 1200px;
    }

    .list-header {
        background-color: transparent;
        font-size: 1.5rem;
        font-weight: bold;
        border-bottom: 2px solid #eee;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .detail-info-section {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        line-height: 1.8;
        border: 1px solid #e9ecef;
    }

    .detail-info-section strong {
        color: #343a40;
        min-width: 90px;
        display: inline-block;
    }

    .question-card {
        border: 1px solid #dee2e6;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.04);
    }

    .question-card .card-body {
        padding: 1.5rem;
    }

    .question-card .card-title {
        color: #212529;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .question-card .form-check {
        font-size: 0.95rem;
    }

    .question-card .form-check-input {
        margin-top: 0.3em;
    }

    .btn-primary {
        padding: 0.75rem 1.5rem;
        font-weight: bold;
        font-size: 1rem;
        border-radius: 12px;
        margin-top: 2rem;
    }


</style>

<div class="container mt-5 mb-5">
    <div class="paper-list-card">
        <div class="list-header">
            <a href="/api/paper-menu/paper/{{model.paperId}}/question/save-form" class="btn btn-primary">문제등록</a>
        </div>

        <div class="detail-info-section">
            <strong>시험일:</strong> {{model.evaluationDate}}<br>
            <strong>시험장소:</strong> {{model.evaluationRoom}}<br>
            <strong>시험장비:</strong> {{model.evaluationDevice}}<br>
            <strong>교과목:</strong> {{model.subjectTitle}}<br>
            <strong>훈련교사:</strong> {{model.teacherName}}<br>
            <strong>문항수:</strong> {{model.questionCount}}<br>
        </div>

        <!-- 과제 정보 박스 -->
        <div class="detail-info-section mb-4">
            <h5 class="mb-3 fw-bold text-dark">과제 정보</h5>

            <div class="mb-3">
                <div class="fw-bold text-secondary mb-1">📌 주제</div>
                <div class="ps-1">{{model.pblTitle}}</div>
            </div>

            <!-- 시나리오 및 상세 가이드 -->
            <div class="mb-3">
                <div class="fw-bold text-secondary mb-1">📖 시나리오 및 상세 가이드</div>
                <div class="ps-1 mb-2">{{model.pblScenario}}</div>
                {{#model.pblScenarioGuideLink}}
                    <a href="{{model.pblScenarioGuideLink}}" target="_blank"
                       class="btn btn-sm btn-outline-secondary">
                        시나리오 상세 가이드 열기
                    </a>
                {{/model.pblScenarioGuideLink}}
            </div>

            <div class="mb-3">
                <div class="fw-bold text-secondary mb-1">💡 도전 과제</div>
                <ul class="ps-4 mb-1">
                    {{#model.pblChallenges}}
                        <li>{{.}}</li>{{/model.pblChallenges}}
                </ul>
            </div>

            <div class="mb-3">
                <div class="fw-bold text-secondary mb-1">📤 제출 항목</div>
                <ul class="ps-4 mb-1">
                    {{#model.pblSubmitFormats}}
                        <li>{{.}}</li>{{/model.pblSubmitFormats}}
                </ul>
            </div>

            <!-- 프로젝트 제출 템플릿 -->
            {{#model.pblSubmitTemplateLink}}
                <div class="mb-3">
                    <div class="fw-bold text-secondary mb-1">📎 프로젝트 제출 템플릿</div>
                    <a href="{{model.pblSubmitTemplateLink}}" target="_blank"
                       class="btn btn-sm btn-outline-secondary">
                        제출 템플릿 열기
                    </a>
                </div>
            {{/model.pblSubmitTemplateLink}}
        </div>

        {{#model.questions}}
            <div class="card mb-4 question-card">
                <div class="card-header">
                    {{no}}. {{title}} </div>

                <div class="card-body p-3">
                    <div class="scenario-description-block mb-4">
                        <div class="text-dark">
                            {{#scenarios}}
                                {{.}}<br>
                            {{/scenarios}}
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                            <tr>
                                <th style="width: 80px;" class="text-center">점수</th>
                                <th>평가기준 (루브릭 설명)</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#options}}
                                <tr>
                                    <td class="text-center fw-bold align-middle">{{point}}점</td>
                                    <td>{{rubricItem}}</td>
                                </tr>
                            {{/options}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {{/model.questions}}
    </div>
</div>

{{> layout/footer}}