{{> layout/header}}

<div class="container p-5">

    <div class="card">
        <div class="card-header"><b>시험지를 등록 해주세요</b></div>
        <div class="card-body">
            <form id="save-form" action="/api/paper-menu/subject/{{subjectId}}/paper/save" method="post">
                <hr>
                <div class="mb-3">
                    <select class="form-control" name="paperType" required>
                        <option value="ORIGINAL">본평가</option>
                        <option value="RETEST">재평가</option>
                    </select>
                </div>

                <hr>

                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="문항수" name="questionCount" required>
                </div>

                <div class="mb-3">
                    <label>평가일</label>
                    <input type="date" class="form-control" placeholder="평가일" name="evaluationDate" value="2024-05-10">
                </div>
                <div class="mb-3">
                    <label for="evaluationWay" class="form-label">평가 방법</label>
                    <select class="form-select" name="evaluationWay">
                        <option value="MCQ">객관식</option>
                        <option value="DESCRIPTIVE">서술형</option>
                        <option value="PRACTICAL">작업형</option>
                        <option value="PROJECT">프로젝트형(PBL)</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary form-control">시험지등록</button>
            </form>
        </div>
    </div>
</div>

{{> layout/footer}}