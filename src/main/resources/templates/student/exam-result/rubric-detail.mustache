{{> layout/header}}

<!-- 학생 서명 모달 -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">서명하세요</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body d-flex justify-content-center">
                <canvas id="signature-pad" width="400px" height="400px"></canvas>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="saveSignature()" class="btn btn-outline-primary" data-bs-dismiss="modal">
                    사인
                </button>
                <button type="button" onclick="cancelSignature()" class="btn btn-outline-primary"
                        data-bs-dismiss="modal">취소
                </button>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5 mb-5">
    <div class="paper-list-card">

        <div class="d-flex justify-content-between detail-info-section">
            <div>
                <strong>시험일</strong> : {{model.evaluationDate}} <br>
                <strong>평가장소</strong> : {{model.evaluationRoom}} <br>
                <strong>평가장비</strong> : {{model.evaluationDevice}} <br>
                <strong>교과목</strong> : {{model.subjectTitle}} <br>
                <strong>훈련교사</strong> : {{model.teacherName}} <br>
                <strong>훈련생</strong> : {{model.studentName}} <br>
                <strong>문항수</strong> : {{model.questionCount}} <br>
                <strong>만점기준</strong> : {{model.manjumScore}} <br>
                <strong>총점</strong> : {{model.score}} / <strong>백분율</strong> : {{model.finalScore}}<br>
                <strong>수준</strong> : {{model.grade}} <br>
                <strong>통과여부</strong> : {{model.examPassState}} <br>
            </div>
            <div>
                <table class="sign-table">
                    <tr>
                        <td class="sign-header">훈련교사</td>
                        <td class="sign-header">훈련생</td>
                    </tr>
                    <tr>
                        <td class="sign-box">
                            <img class="sign-fit" src="{{model.teacherSign}}">
                        </td>
                        <td class="sign-box">
                            {{#model.studentSign}}
                                <img class="sign-fit" src="{{model.studentSign}}">
                            {{/model.studentSign}}
                            {{^model.studentSign}}
                                <div class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#myModal">
                                    사인하기
                                </div>
                            {{/model.studentSign}}
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <!-- 학생 제출 자료 -->
        <div class="card mb-4 border border-secondary-subtle shadow-sm">
            <div class="card-header bg-light text-dark fw-bold">
                📎 학생 제출 자료
            </div>
            <div class="card-body">
                {{#model.submitLink}}
                             <a href="{{submitLink}}" target="_blank"
                                       class="text-decoration-underline text-primary">
                                        {{submitLink}}
                                    </a>  
                {{/model.submitLink}}
                {{^model.submitLink}}
                    <div class="text-muted">제출된 자료가 없습니다.</div>
                {{/model.submitLink}}
            </div>
        </div>


        {{#model.answers}}
            <div class="card mb-1 question-card exam-body">
                <input type="hidden" class="answerId" value="{{answerId}}">
                <div class="card-header">
                    {{no}}. {{title}} </div>

                <div class="card-body p-3">
                    <div class="scenario-description-block mb-4">
                        <div class="text-dark">
                            {{#scenarios}}
                                {{.}}<br>
                            {{/scenarios}}
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                            <tr>
                                <th style="width: 80px;" class="text-center">점수</th>
                                <th>평가기준 (루브릭 설명)</th>
                                <th>채점</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#options}}
                                <tr>
                                    <td class="text-center fw-bold align-middle">
                                        {{point}}점
                                    </td>
                                    <td>{{rubricItem}}</td>
                                    <td><input class="form-check-input me-2 optionNo" type="radio"
                                               name="question-{{questionId}}"
                                               value="{{no}}"
                                               {{#isSelect}}checked{{/isSelect}}></td>
                                </tr>
                            {{/options}}
                            </tbody>
                        </table>

                        {{#codeReviewPRLink}}
                            <div class="mt-3 mb-3 p-3 border rounded bg-white border-primary-subtle shadow-sm">
                                <div class="fw-semibold text-dark mb-2">
                                    📌 코드리뷰 링크
                                </div>
                                <div>
                                    <a href="{{codeReviewPRLink}}" target="_blank"
                                       class="text-decoration-underline text-primary">
                                        {{codeReviewPRLink}}
                                    </a>
                                </div>
                            </div>
                        {{/codeReviewPRLink}}

                    </div>
                </div>
            </div>
        {{/model.answers}}

        <div class="card">
            <div class="card-header">총평</div>
            <div class="card-body">
                <textarea id="teacherComment" class="form-control" rows="5" readonly>{{model.teacherComment}}</textarea>
            </div>
        </div>
    </div>
</div>

<script>
    const canvas = document.getElementById('signature-pad');
    const context = canvas.getContext('2d');
    context.lineWidth = 4;
    context.strokeStyle = '#000000';

    let drawing = false, outside = false, lastX = 0, lastY = 0;

    canvas.addEventListener('mousedown', startDrawing);
    canvas.addEventListener('mousemove', draw);
    canvas.addEventListener('mouseup', stopDrawing);
    canvas.addEventListener('mouseout', e => {
        if (drawing) stopDrawing(e, true);
    });
    canvas.addEventListener('mouseenter', e => {
        if (outside && drawing) startDrawing(e, true);
    });

    function cancelSignature() {
        context.clearRect(0, 0, canvas.width, canvas.height);
    }

    function startDrawing(e, continueDrawing = false) {
        drawing = true;
        if (!continueDrawing) {
            lastX = e.offsetX;
            lastY = e.offsetY;
        }
    }

    function draw(e) {
        if (!drawing) return;
        context.beginPath();
        context.moveTo(lastX, lastY);
        context.lineTo(e.offsetX, e.offsetY);
        context.stroke();
        lastX = e.offsetX;
        lastY = e.offsetY;
    }

    function stopDrawing(e, leftCanvas = false) {
        if (!leftCanvas) drawing = false;
        outside = leftCanvas;
    }

    function saveSignature() {
        const dataUrl = canvas.toDataURL();
        const requestBody = {
            examId: {{model.examId}},
            sign: dataUrl
        };

        $.ajax({
            url: `/api/student/exam/sign`,
            method: "PUT",
            data: JSON.stringify(requestBody),
            contentType: "application/json; charset=utf-8"
        }).done(() => location.reload())
                .fail(res => {
                    alert(res.responseJSON.msg);
                    console.log(res.responseJSON.msg);
                });
    }
</script>

