{{> layout/header}}

<div class="container mt-5 mb-5">
    <div class="paper-list-card">
        <div class="list-header">
            <h2>응시 가능한 시험 목록</h2>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>번호</th>
                    <th>교과목</th>
                    <th>시험유형</th>
                    <th>문항수</th>
                    <th>과정명/회차</th>
                    <th>훈련강사</th>
                    <th>응시</th>
                </tr>
                </thead>
                <tbody>
                {{#model.papers}}
                    <tr>
                        <td>{{subjectNo}}</td>
                        <td>{{subjectTitle}}</td>
                        <td>{{paperType}}</td>
                        <td>{{questionCount}}</td>
                        <td>{{courseTitle}} / {{courseRound}}회차</td>
                        <td>{{teacherName}}</td>
                        <td>
                            {{#isAttendance}}
                                <button class="btn btn-outline-secondary btn-sm" disabled>응시완료</button>
                            {{/isAttendance}}
                            {{^isAttendance}}
                                <a class="btn btn-outline-primary btn-sm" href="/api/student/paper/{{paperId}}/start">응시하기</a>
                            {{/isAttendance}}
                        </td>
                    </tr>
                {{/model.papers}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{> layout/footer}}
