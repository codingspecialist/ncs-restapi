{{> layout/header}}

<style>
    /* 기존 스타일 유지 + 아래 새로 추가 */
    .element-info-box {
        background-color: #f1f3f5;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 1.25rem;
        margin-bottom: 2rem;
    }

    .element-info-box h6 {
        font-weight: bold;
        color: #343a40;
        margin-bottom: 1rem;
    }

    .element-info-box ul {
        padding-left: 1.2rem;
        margin-bottom: 0;
    }

    .element-info-box li {
        line-height: 1.7;
        color: #495057;
        margin-bottom: 0.3rem;
    }

    .paper-list-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.06);
        padding: 2.5rem;
        margin: 0 auto;
        max-width: 1200px;
    }

    .list-header {
        background-color: transparent;
        font-size: 1.5rem;
        font-weight: bold;
        border-bottom: 2px solid #eee;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .detail-info-section {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        line-height: 1.8;
        border: 1px solid #e9ecef;
    }

    .detail-info-section strong {
        color: #343a40;
        min-width: 90px;
        display: inline-block;
    }

    .question-card {
        border: 1px solid #dee2e6;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.04);
    }

    .question-card .card-body {
        padding: 1.5rem;
    }

    .question-card .card-title {
        color: #212529;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .question-card .form-check {
        font-size: 0.95rem;
    }

    .question-card .form-check-input {
        margin-top: 0.3em;
    }

    .btn-primary {
        padding: 0.75rem 1.5rem;
        font-weight: bold;
        font-size: 1rem;
        border-radius: 12px;
        margin-top: 2rem;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="paper-list-card">
        <div class="detail-info-section">
            <strong>시험일:</strong> {{model.evaluationDate}}<br>
            <strong>시험장소:</strong> {{model.evaluationRoom}}<br>
            <strong>시험장비:</strong> {{model.evaluationDevice}}<br>
            <strong>교과목:</strong> {{model.subjectTitle}}<br>
            <strong>훈련교사:</strong> {{model.teacherName}}<br>
            <strong>훈련생:</strong> {{model.studentName}}<br>
            <strong>문항수:</strong> {{model.questionCount}}<br>
        </div>

        <div class="detail-info-section mb-3">
            {{#model.guideLink}}
                <p class="mb-2">
                    <strong>🔗 상세 예시 링크:</strong>
                    <a href="{{model.guideLink}}" target="_blank"
                       class="text-primary text-decoration-underline">
                        {{model.guideLink}}
                    </a>
                </p>
            {{/model.guideLink}}

            <div class="fw-bold text-dark mb-3">
                이 과제의 정답은 다양할 수 있으며, 아래와 같은 수준의 결과물이 이상적입니다:
            </div>

            <ul class="ps-3"> {{#model.guideSummaries}}
                <li>{{.}}</li>
            {{/model.guideSummaries}}
            </ul>
        </div>

        <form>
            {{#model.questions}}
                <div class="card mb-4 question-card">
                    <div class="card-body">
                        <input type="hidden" class="questionNo" value="{{no}}">
                        <h5 class="card-title">{{no}}. {{title}}</h5>

                        <div class="card-body p-3">
                            <div class="scenario-description-block mb-4">
                                {{#scenarioLink}}
                                    <p class="mb-2">
                                        <strong>📝 시나리오 링크:</strong>
                                        <a href="{{scenarioLink}}" target="_blank"
                                           class="text-primary text-decoration-underline">
                                            {{scenarioLink}}
                                        </a>
                                    </p>
                                {{/scenarioLink}}

                                <div class="text-dark">
                                    {{#scenarios}}
                                        {{.}}<br>
                                    {{/scenarios}}
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead class="table-light">
                                    <tr>
                                        <th style="width: 80px;" class="text-center">점수</th>
                                        <th>평가기준 (루브릭 설명)</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {{#options}}
                                        <tr>
                                            <td class="text-center fw-bold align-middle">{{point}}점</td>
                                            <td>{{rubricItem}}</td>
                                        </tr>
                                    {{/options}}
                                    </tbody>
                                </table>
                            </div>

                            <div class="mb-4">
                                <label for="scenarioLink" class="form-label fw-bold">제출 답안 <small
                                        class="text-muted">(필수사항)</small></label>
                                <input type="url" class="form-control" id="answer-hahahahah">
                                <small class="form-text text-muted">
                                    ※ Notion 링크로 제출해주세요.
                                </small>
                            </div>
                            <div class="mb-4">
                                <label for="scenarioLink" class="form-label fw-bold">소스 코드 <small
                                        class="text-muted">(선택사항)</small></label>
                                <input type="url" class="form-control" id="answer-hahahahah">
                                <small class="form-text text-muted">
                                    ※
                                    ex)
                                    https://github.com/codingspecialist/blog-jpa/blob/master/src/main/java/shop/mtcoding/blog/user/UserController.java
                                </small>
                            </div>

                        </div>

                    </div>
                </div>
            {{/model.questions}}

            <button type="button" onclick="sendAnswer()" class="btn btn-primary">제출하기</button>
        </form>
    </div>
</div>

<script>
    function sendAnswer() {
        let requestBody = {
            paperId: {{model.paperId}},
            teacherName: "{{model.teacherName}}",
            answers: []
        };

        let items = document.querySelectorAll(".questionNo");
        items.forEach(el => {
            const questionNo = el.value;
            const tr = el.closest(".card");
            const selected = tr.querySelector(".optionNo:checked");
            const selectedOptionNo = selected ? selected.value : null;

            requestBody.answers.push({
                questionNo: Number(questionNo),
                selectedOptionNo: Number(selectedOptionNo)
            });
        });

        fetch("/api/student/exam", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(requestBody)
        })
                .then(res => {
                    if (!res.ok) return res.json().then(err => Promise.reject(err));
                    return res.json();
                })
                .then(res => {
                    console.log(res);
                    location.href = "/api/student/paper";
                })
                .catch(err => {
                    alert(err.msg || "제출 중 오류가 발생했습니다.");
                });
    }
</script>

