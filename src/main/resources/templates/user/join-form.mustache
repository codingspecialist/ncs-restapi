{{> layout/header}}

<div class="container p-5">

    <div class="card">
        <div class="card-header"><b>회원가입을 해주세요</b></div>
        <div class="card-body">
            <form action="/join" method="post" enctype="application/x-www-form-urlencoded">
                <select class="form-control select-option" name="role">
                    <option value="student">학생</option>
                    <option value="teacher">강사</option>
                </select>
                <hr>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter username" name="username" value="love">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Enter password" name="password" value="1234">
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" placeholder="Enter email" name="email" value="love@nate.com">
                </div>
                <button type="submit" class="btn btn-primary form-control">회원가입</button>
            </form>
        </div>
    </div>
</div>

<script>
    $(".select-option").css("color", "blue");
</script>

{{> layout/footer}}